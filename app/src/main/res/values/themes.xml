<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TudeeApp" parent="android:Theme.Material.Light.NoActionBar">
        // hide splash screen
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.TudeeApp.Splash" parent="Theme.SplashScreen">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowSplashScreenBackground">@color/Transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.TudeeApp</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/Transparent</item>
    </style>

</resources>